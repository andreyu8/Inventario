<!DOCTYPE html>
	
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<?component name="pagingsize" macroURI="/WEB-INF/zul/common/customcomps/pagingsize.zul" inline="true"?>

<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="native" xmlns:w="client" >
<window id="win" border="none" apply="org.zkoss.bind.BindComposer" >
	<zscript>
		import com.seidor.inventario.adapter.EmployeeAdapter;
		import com.seidor.inventario.navigation.*;
		
		NavigationState state = Executions.getCurrent().getArg().get("NAVSTATE");
		
		EmployeeAdapter employeeDetail = employeeController.read(state.getDetailIdentifier());
		
		
		public void cancel(){
			navigationControl.changeToPrevious(win);
		}
		
		public void modify(){
			state.setUri("/WEB-INF/zul/employee/edit.zul");
			state.appendBreadCrumbsPath("Editar");
			state.setDetailIndex(null);
			state.setDetailList(null);
			state.setDetailLabels(null);
			navigationControl.changeView(win, state);
		}
	</zscript>

<div class="row sectionBox animated aniFadeIn">
		<div class="col-md-6" align="left" >
			<h:span style="padding-top: 5px; display: block;" />
			<label value="Detalle del cliente" sclass="sectionTitle" />
			<label value="(${employeeDetail.empleado.nombre})" style="font-size: 12px;" />
		</div>
		<div class="col-md-6" align="right" >
			<button label="modificar" onClick="modify();" iconSclass="z-icon-pencil" />
		</div>
	</div>
	
	<div class="row subBox animated aniFadeIn">
		<div class="col-md-12">
			<label value="Datos generales" />
		</div>
	</div>
	
	<div class="row container animated aniFadeIn" >
			
		<div class="col-md-4">
				<label value="Nombre" sclass="detailField"/>
				<h:p> <label value="@bind(employeeDetail.empleado.nombre)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="A. Paterno" sclass="detailField" />
				<h:p> <label value="@bind(employeeDetail.empleado.APaterno)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="A. Materno" sclass="detailField" />
				<h:p> <label value="@bind(employeeDetail.empleado.AMaterno)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Cargo" sclass="detailField"/>
				<h:p> <label value="@bind(employeeDetail.empleado.cargo)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Almacen" sclass="detailField" />
				<h:p> <label value="@bind(employeeDetail.empleado.almacen.almacen)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Correo" sclass="detailField"/>
				<h:p> <label value="@bind(employeeDetail.empleado.EMail)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="CURP" sclass="detailField"/>
				<h:p> <label value="@bind(employeeDetail.empleado.curp)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="RFC" sclass="detailField"/>
				<h:p> <label value="@bind(employeeDetail.empleado.rfc)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Numero de Empleado" sclass="detailField" />
				<h:p> <label value="@bind(employeeDetail.empleado.numeroEmpleado)" sclass="detailData"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Telefono" sclass="detailField" />
				<h:p> <label value="@bind(employeeDetail.empleado.telefono)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="ExtensiÃ³n" sclass="detailField" />
				<h:p> <label value="@bind(employeeDetail.empleado.extension)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Celular" sclass="detailField" />
				<h:p> <label value="@bind(employeeDetail.empleado.celular)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Numero del Seguro Social" sclass="detailField" />
				<h:p> <label value="@bind(employeeDetail.empleado.numeroSegSocial)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Fecha de registro" sclass="detailField" />
				<h:p> <label value="@bind(employeeDetail.empleado.fechaRegistro)" sclass="detailData" /> </h:p>
			</div>
			<div class="col-md-3">
            <label value="Activo" sclass="detailField" />
            <h:p>  
            	<checkbox mold="switch" checked="${employeeDetail.falgActive}" disabled="true"/>
            </h:p>	
         </div>
	</div>
	
	<separator spacing="10px" />
	
</window>
</zk>