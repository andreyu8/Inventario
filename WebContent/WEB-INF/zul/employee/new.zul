<!DOCTYPE html>
	
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<?component name="pagingsize" macroURI="/WEB-INF/zul/common/customcomps/pagingsize.zul" inline="true"?>

<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="native" xmlns:w="client" >
<window id="win" border="none" apply="org.zkoss.bind.BindComposer" >
	
	<zscript>
		import com.seidor.inventario.adapter.EmployeeAdapter;
		import com.seidor.inventario.navigation.*;
		
		NavigationState state = Executions.getCurrent().getArg().get("NAVSTATE");
		
		EmployeeAdapter employeeSave = employeeController.readForNew();
		
		
		public void cancel(){
			navigationControl.changeToPrevious(win);
		}
		
		public void save(){
			fcv.validate(win);
			employeeController.save(employeeSave, state, win);
		}
	</zscript>
	
	<div class="row sectionBoxAlt animated aniFadeIn">
		<div class="row">
			<div class="col-md-8">
				<h:span style="padding-top: 5px; display: block;" />
				<div align="left" style="float: left;" >
					<label value="@bind(employeeSave.empleado.nombre)" sclass="sectionTitle" />
				</div>
			</div>
			<div class="col-md-4">
				<div align="right" style="float: right;" >
					<button label="cancelar" sclass="btn btn-warning" onClick="cancel();" iconSclass="z-icon-times" />
					<button label="guardar" sclass="btn btn-success" onClick="save();" iconSclass="z-icon-check" />
				</div>
			</div>
		</div>
	</div>
	
	<div class="row subBoxAlt animated aniFadeIn" >
		<div class="col-md-12">
			<label value="Datos del empleado" />
		</div>
	</div>
	<div class="container animated aniFadeIn" >
		<div class="row editBox">
			<div class="col-md-4">
				<label value="Nombre*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.nombre)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="A. Paterno*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.APaterno)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="A. Materno*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.AMaterno)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Cargo*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.cargo)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Almacen*" sclass="editField" />
				<h:p> <combobox value="@bind(employeeSave.empleado.almacen.almacen)"
							 		onCreate="warehouseController.loadAlmacen(self);" 
						 			id="clicb" constraint="${cmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Correo*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.EMail)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="CURP*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.curp)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>	
			<div class="col-md-4">
				<label value="RFC*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.rfc)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>	
			<div class="col-md-4">
				<label value="Numero de Empleado*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.numeroEmpleado)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Telefono*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.telefono)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="ExtensiÃ³n*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.extension)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Celular*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.celular)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Numero del Seguro Social*" sclass="editField" />
				<h:p> <textbox value="@bind(employeeSave.empleado.numeroSegSocial)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
				<label value="Fecha de registro*" sclass="editField" />
				<h:p> <datebox value="@bind(employeeSave.empleado.fechaRegistro)" constraint="${tmv}" width="400px;"/> </h:p>
			</div>
			<div class="col-md-4">
                <label value="Activo" sclass="editField" />
                <h:p>  
                	<checkbox mold="switch" checked="@bind(employeeSave.falgActive)"/>
                </h:p>	
            </div>
		</div>
	</div>
	
</window>
</zk>